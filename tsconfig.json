{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./build",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "./src",
    "pretty": true,
    "removeComments": true,
    "noImplicitAny": true,
    "lib": ["es2022"]
  },
  "include": ["./src/**/*", "./src/cowtypes/types.d.ts"], // Ensure correct paths
  "exclude": ["node_modules", "build"]
}
